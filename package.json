{
  "name": "document-service",
  "version": "0.0.1",
  "description": "API for interacting with raw document store",
  "private": true,
  "author": "\"John Goodall <jgoodall@ornl.gov>",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "start": "./node_modules/.bin/forever start --append -o ./forever.log -e ./forever.log server.js",
    "stop": "./node_modules/.bin/forever stop server.js",
    "status": "./node_modules/.bin/forever list",
    "test": "./node_modules/.bin/mocha --growl --check-leaks -R dot test/*-test.js",
    "watch": "./node_modules/.bin/mocha --watch --growl -R min test/*-test.js",
    "docker-build": "sudo docker build -t jgoodall/document-service .",
    "docker-run": "sudo docker run -p 8000:8000 jgoodall/document-service"
  },
  "dependencies": {
    "restify": "~2.6",
    "bunyan": "~0.22",
    "yaml-config": "~0.3",
    "forever": "~0.10",
    "riak-js": "~0.10",
    "node-etcd": "~2",
    "queue-async": "~1"
  },
  "devDependencies": {
    "mocha": "~1",
    "chai": "~1",
    "supertest": "~0.9"
  },
  "engine": {
    "node": "~0.10"
  }
}
